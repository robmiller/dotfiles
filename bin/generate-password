#!/usr/bin/env ruby

chars  = "abcdefghijklmnopqrstuvwxyz"
chars += "ABCDEFGHIJKLMNOPQRSTUVWXYZ"
chars += "0123456789"
chars += "!@Â£$%^&*(),./;'\\[]<>?:\"|{}`~-=_+"

length = Integer(ARGV[0] || 12)

password = (0...length).map { chars[rand(chars.length)] }.join

open("|pbcopy", "w") do |clipboard|
  clipboard.write password
end

print password
$stderr.puts "\nPassword copied to clipboard"
